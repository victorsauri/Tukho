<div class = "container">
  <article>
    <h1>Event's Preview</h1>
    <h3>Name of the event: <%= @event.name %></h3>
    <h3>Context: <%= @event.description %></h3>
    <h3>Date: <%= @event.date.strftime("#{@event.date.day.ordinalize} %B %Y") %></h3>
    <h3><%= @event.starting_time.strftime(" Start: %H:%M") %></h3>
    <h3><%= @event.finishing_time.strftime(" Finish: %H:%M") %></h3>
    <%= link_to("Index", events_path) %>
    <%= link_to("Red", events_path(id: @event.id, color: "red"),  :action => :choose_color , method: :post )    %>
    <%= link_to("Orange", events_path(id: @event.id, color: "orange"),  :action => :choose_color , method: :post )    %>
    <%= link_to("Green", events_path(id: @event.id, color: "green"),  :action => :choose_color , method: :post )    %>
   </article>
</div>	